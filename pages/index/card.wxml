<view class="row-container">
<form bindsubmit="formSubmit" bindreset="formReset">
    <view class="header">
      <view class="left">
        <text>绑定校园卡号</text>
      </view>
    </view>
    <view style='border-top:1px #ccc solid'></view>
        <view class="form-list">
        <view class="form-list-left">卡号</view>
        <view class="form-list-right">
        <input type='number' placeholder="请输入6位卡号" maxlength="6" name="cardid" value="{{cardid}}"/>
        </view>
        </view>

      <view style='border-top:1px #ccc solid'></view>

        <button class="weui-btn" type="primary" form-type="submit" style='margin-top:10px;'>提交</button>
    
    </form>
  </view>